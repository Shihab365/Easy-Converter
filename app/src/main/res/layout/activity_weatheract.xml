<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/weatherback"
        tools:context="com.dailycalculator.asus.dailycalculatorapps.weatheract">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <Spinner
                    android:layout_weight="1"
                    android:id="@+id/weatherspinner1id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:popupBackground="#00b2ff"
            >
            </Spinner>

        <EditText
                android:layout_weight="1"
                android:id="@+id/editTxt1Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:backgroundTint="#5145ff"
                android:layout_marginBottom="5dp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
    >
        <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/conv2"
                android:layout_marginBottom="5dp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Spinner
                android:layout_weight="1"
                android:id="@+id/weatherspinner2id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:popupBackground="#00b2ff"
        >
        </Spinner>

        <TextView
                android:layout_weight="1"
                android:id="@+id/Txt2Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#5145ff"
                android:layout_marginBottom="5dp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <Button
                android:id="@+id/calcId"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:background="#5145ff"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
        />
        <Button
                android:id="@+id/resId"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:background="#5145ff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
        />
    </LinearLayout>
</LinearLayout>
